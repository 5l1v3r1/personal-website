<style scoped>
    .post > header > h1 {
        margin-bottom: 0;
    }

    .post > header {
        text-align: center;
    }

    .post > p {
        text-align: justify;
    }

    .post .date {
        color: #545454;
    }

    .post h2, .post h3, .post h4, .post h5, .post h6 {
        position: relative;
    }

    .post h2::before, .post h3::before, .post h4::before, .post h5::before, .post h6::before {
        content: "#";
        position: absolute;
        left: -20px;
        color: #ccc;
    }

    .prev-next {
        display: flex;
        justify-content: space-between;
        margin-bottom: 2rem;
    }
</style>

<a href="/blog.html" class="back-button">&larr; Back to index</a>

{{#post}}
    <article class="post">
        <header>
            <h1>{{title}}</h1>
            <p class="date">{{date}}</p>
        </header>
        <hr />
        {{{first_paragraph}}}
        {{{content}}}
    </article>
{{/post}}
<nav class="prev-next">
    {{#prev}}
        <a href="/{{url}}">&larr; {{title}}</a>
    {{/prev}}
    {{#next}}
        <a class="next" href="/{{url}}">{{title}} &rarr;</a>
    {{/next}}
</nav>
