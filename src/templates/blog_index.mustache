<style scoped>
    .post > h1 {
        margin-bottom: 0;
    }

    .post > h1 > a {
        color: inherit;
        border-bottom: none;
    }

    .post > p {
        text-align: justify;
        line-height: 1.58;
        font-size: 1.1em;
    }

    .post .date {
        color: #545454;
        line-height: 1;
        font-size: 1em;
    }

    .post:last-child {
        margin-bottom: 2rem;
    }

    .divider {
        margin: 2rem 0;
    }

    .tags > a {
        margin-right: 0.5em;
        padding: 0.5em 0.75em;
        background-color: #eee;
        font-size: 0.7em;
        color: #555;
        border-radius: 3px;
        font-family: 'Roboto', sans-serif;
        border: none;
    }

    .tags > a:hover {
        background-color: #ddd;
    }

    .tags > a:active {
        background-color: #ccc;
    }
</style>

{{#posts}}
    <section class="post">
        <h1><a href="/{{url_prefix}}/{{url}}">{{title}}</a></h1>
        <p class="date">{{date}}</p>
        {{{first_paragraph}}}
        <div class="tags">
            {{#tags}}
                <a href="#">#{{.}}</a>
            {{/tags}}
        </div>
    </section>
    {{^last}}
        <hr class="divider"/>
    {{/last}}
{{/posts}}
