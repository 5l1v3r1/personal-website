<style scoped>
    .post > header > h1 {
        margin-bottom: 0;
    }

    .post > header {
        text-align: center;
    }

    .post > p, .post > ul, .post > ol {
        text-align: justify;
        line-height: 1.58;
    }

    .post .date {
        color: #545454;
        line-height: 1;
        font-size: 1em;
    }

    .post h2, .post h3, .post h4, .post h5, .post h6 {
        position: relative;
    }

    .post h2 > a, .post h3 > a, .post h4 > a, .post h5 > a, .post h6 > a {
        border: none;
        color: black;
    }

    .post h2::before, .post h3::before, .post h4::before, .post h5::before, .post h6::before {
        content: "#";
        position: absolute;
        left: -1em;
        color: #ccc;
    }

    .post h2:hover::before, .post h3:hover::before, .post h4:hover::before, .post h5:hover::before, .post h6:hover::before {
        color: #b40b70;
    }

    .post h2:active::before, .post h3:active::before, .post h4:active::before, .post h5:active::before, .post h6:active::before {
        color: #870051;
    }

    .prev-next {
        display: flex;
        justify-content: space-between;
        margin-bottom: 2rem;
    }

    .post .tags {
        margin-bottom: 1.5em;
    }

    .post .tags > a {
        font-size: 0.7em;
        margin-right: 0.5em;
        padding: 0.5em 0.75em;
        background-color: #eee;
        color: #555;
        border-radius: 3px;
        font-family: 'Roboto', sans-serif;
        border: none;
    }

    .post .tags > a:hover {
        background-color: #ddd;
    }

    .post .tags > a:active {
        background-color: #ccc;
    }
</style>

<a href="/blog" class="back-button">&larr; Back to index</a>

{{#post}}
    <article class="post">
        <header>
            <h1>{{title}}</h1>
            <p class="date">{{date}}</p>
            <div class="tags">
                {{#tags}}
                    <a href="/{{blog_url_prefix}}/{{tags_url_prefix}}/{{.}}">#{{.}}</a>
                {{/tags}}
            </div>
        </header>
        <hr />
        {{{first_paragraph}}}
        {{{content}}}
    </article>
{{/post}}
<nav class="prev-next">
    {{#prev}}
        <a href="/{{blog_url_prefix}}/{{posts_url_prefix}}/{{url}}">&larr; {{title}}</a>
    {{/prev}}
    {{#next}}
        <a class="next" href="/{{blog_url_prefix}}/{{posts_url_prefix}}/{{url}}">{{title}} &rarr;</a>
    {{/next}}
</nav>
