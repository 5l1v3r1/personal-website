<style scoped>
    .post > header > h1 {
        margin-bottom: 0;
    }

    .post > header {
        text-align: center;
    }

    .prev-next {
        display: flex;
        justify-content: space-between;
        margin-bottom: 2rem;
    }
</style>

<a href="/blog" class="back-button">&larr; Back to index</a>

{{#post}}
    <article class="post">
        <header>
            <h1>{{title}}</h1>
            <p class="date">{{date}}</p>
            <div class="tags">
                {{#tags}}
                    <a href="/blog/tags/{{.}}">#{{.}}</a>
                {{/tags}}
            </div>
        </header>
        <hr />
        {{{first_paragraph}}}
        {{{content}}}
    </article>
{{/post}}
<nav class="prev-next">
    {{#prev}}
        <a href="/blog/posts/{{url}}">&larr; {{title}}</a>
    {{/prev}}
    {{#next}}
        <a class="next" href="/blog/posts/{{url}}">{{title}} &rarr;</a>
    {{/next}}
</nav>
